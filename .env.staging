# JSVerseHub Environment Configuration - Staging

# Server
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=https://staging.jsversehub.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500

# Feature Flags
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Database
DB_HOST=staging-db.internal
DB_PORT=5432
DB_USER=jsversehub
DB_PASSWORD=${STAGING_DB_PASSWORD}
DB_NAME=jsversehub_staging

# Cache
CACHE_TTL=7200
REDIS_URL=redis://staging-redis.internal:6379

# API Keys
SENTRY_DSN=https://staging@sentry.io/...
SLACK_WEBHOOK=https://hooks.slack.com/services/...
PAGERDUTY_KEY=${STAGING_PAGERDUTY_KEY}

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
TRACE_SAMPLE_RATE=0.05
