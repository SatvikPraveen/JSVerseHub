# JSVerseHub Environment Configuration - Example

# Copy this file to .env and fill in your actual values
# This file documents all available environment variables

# Server Configuration
NODE_ENV=development                          # development, staging, or production
PORT=3000                                     # Server port
HOST=localhost                                # Server host

# Logging
LOG_LEVEL=info                               # debug, info, warn, error, fatal
LOG_FORMAT=json                              # json or text

# Security
CORS_ORIGIN=http://localhost:3000            # CORS allowed origin
RATE_LIMIT_WINDOW_MS=60000                   # Rate limit window in ms
RATE_LIMIT_MAX_REQUESTS=100                  # Max requests per window

# Feature Flags
ENABLE_MONITORING=false                      # Enable Prometheus metrics
ENABLE_ANALYTICS=false                       # Enable analytics tracking
ENABLE_ERROR_TRACKING=false                  # Enable Sentry error tracking

# Database
DB_HOST=localhost                            # Database host
DB_PORT=5432                                 # Database port
DB_USER=jsversehub                           # Database user
DB_PASSWORD=                                 # Database password
DB_NAME=jsversehub                           # Database name
DB_POOL_SIZE=10                              # Connection pool size
DB_POOL_TIMEOUT=30000                        # Pool timeout in ms

# Cache
CACHE_TTL=3600                               # Cache time to live in seconds
REDIS_URL=redis://localhost:6379             # Redis connection URL
REDIS_PASSWORD=                              # Redis password

# API Keys & Secrets
SENTRY_DSN=                                  # Sentry error tracking DSN
SLACK_WEBHOOK=                               # Slack webhook URL for alerts
PAGERDUTY_KEY=                               # PagerDuty integration key
JWT_SECRET=                                  # JWT signing secret
ENCRYPTION_KEY=                              # Data encryption key

# Monitoring & Performance
PROMETHEUS_ENABLED=false                     # Enable Prometheus metrics
GRAFANA_ENABLED=false                        # Enable Grafana dashboard
TRACE_SAMPLE_RATE=0.01                       # Distributed tracing sample rate (0-1)
ENABLE_COMPRESSION=true                      # Enable gzip compression
ENABLE_CACHING=true                          # Enable response caching
CACHE_STRATEGY=moderate                      # Cache strategy: conservative, moderate, aggressive
