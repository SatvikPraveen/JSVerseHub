{
  "name": "jsversehub",
  "version": "1.0.0",
  "description": "A gamified JavaScript learning platform with interactive galaxy-based navigation",
  "main": "public/index.html",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run dev:server",
    "dev:server": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run serve:local\"",
    "serve": "live-server public --port=3000 --entry-file=index.html",
    "serve:local": "live-server public --port=3000 --entry-file=index.html",
    "build": "npm run clean && npm run build:css && npm run build:js && npm run optimize",
    "build:css": "postcss src/styles/*.css --dir dist/styles --use autoprefixer cssnano",
    "build:js": "webpack --mode=production",
    "watch:css": "postcss src/styles/*.css --dir dist/styles --watch",
    "watch:js": "webpack --mode=development --watch",
    "test": "jest --maxWorkers=2",
    "test:watch": "jest --watch --maxWorkers=2",
    "test:coverage": "jest --coverage --maxWorkers=2",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.js --max-warnings=0",
    "lint:css": "stylelint src/styles/**/*.css",
    "lint:fix": "eslint src/**/*.js --fix && stylelint src/styles/**/*.css --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run test",
    "optimize": "npm run optimize:images && npm run optimize:assets",
    "optimize:images": "imagemin public/images/**/*.{jpg,png,gif} --out-dir=dist/images",
    "optimize:assets": "copyfiles -u 1 \"public/**/*.{html,wav,woff2}\" dist/",
    "clean": "rimraf dist node_modules/.cache logs",
    "deploy": "npm run build && npm run deploy:surge",
    "deploy:surge": "surge dist jsversehub.surge.sh",
    "deploy:docker": "npm run build && docker build -t jsversehub:1.0.0 . && docker push jsversehub:1.0.0",
    "analyze": "webpack-bundle-analyzer dist/js/bundle.js",
    "docs": "jsdoc src/**/*.js -d docs/api",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run validate && npm run build",
    "version": "npm run validate && npm run build",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "javascript",
    "learning",
    "education",
    "gamification",
    "interactive",
    "programming",
    "tutorial",
    "galaxy",
    "planets",
    "portfolio"
  ],
  "author": {
    "name": "JSVerseHub Developer",
    "email": "developer@jsversehub.com",
    "url": "https://github.com/jsversehub"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsversehub/jsversehub.git"
  },
  "bugs": {
    "url": "https://github.com/jsversehub/jsversehub/issues"
  },
  "homepage": "https://jsversehub.surge.sh",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "html-webpack-plugin": "^5.5.3",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdoc": "^4.0.2",
    "lighthouse": "^10.4.0",
    "live-server": "^1.2.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^33.0.0",
    "surge": "^0.23.1",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/main.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-trailing-spaces": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "class-methods-use-this": "off",
      "no-param-reassign": "off",
      "no-plusplus": "off"
    },
    "globals": {
      "StateManager": "readonly",
      "ConceptLoader": "readonly",
      "GalaxyRenderer": "readonly",
      "Navigation": "readonly",
      "JSVLogger": "readonly",
      "DOMUtils": "readonly",
      "RandomColorGenerator": "readonly",
      "Modal": "readonly",
      "debounce": "readonly",
      "throttle": "readonly"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "indentation": 4,
      "string-quotes": "single",
      "no-duplicate-selectors": true,
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "selector-pseudo-element-colon-notation": "double",
      "selector-pseudo-class-parentheses-space-inside": "never",
      "declaration-block-trailing-semicolon": "always",
      "declaration-colon-space-before": "never",
      "declaration-colon-space-after": "always",
      "number-leading-zero": "always",
      "function-url-quotes": "always",
      "font-family-name-quotes": "always-where-recommended",
      "comment-whitespace-inside": "always",
      "rule-empty-line-before": "always-multi-line",
      "selector-pseudo-element-no-unknown": true,
      "selector-pseudo-class-no-unknown": true,
      "property-no-unknown": true,
      "no-empty-source": null,
      "selector-class-pattern": null
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": true,
    "printWidth": 120,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "last 2 versions",
              "not dead"
            ]
          },
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ]
  }
}
